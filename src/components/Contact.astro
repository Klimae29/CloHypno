---
// Contact.astro
---

<section id="contact" class="py-20 bg-gradient-to-br from-primary-50 to-accent-50">
  <div class="container mx-auto px-6">
    <div class="max-w-4xl mx-auto text-center mb-16" data-aos="fade-up">
      <h2 class="text-3xl md:text-4xl font-lora font-bold text-primary-700 mb-6">
        Prendre contact
      </h2>
      <div class="w-20 h-1 bg-accent-500 mx-auto mb-8"></div>
      <p class="text-lg text-text-light max-w-2xl mx-auto">
        Vous souhaitez commencer un accompagnement ou avoir plus d'informations ?
        N'hésitez pas à me contacter.
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12">

      <!-- Informations de contact -->
      <div data-aos="fade-right">
        <div class="bg-white rounded-2xl p-8 shadow-lg">
          <h3 class="text-2xl font-lora font-bold text-primary-700 mb-6">
            Informations pratiques
          </h3>

          <!-- Téléphone -->
          <div class="flex items-center mb-6 group">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-accent-500 rounded-full flex items-center justify-center mr-4 group-hover:scale-110 transition-transform">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <div>
              <p class="font-semibold text-primary-700">Téléphone</p>
              <a href="tel:+33123456789" class="text-text-light hover:text-primary-600 transition-colors">
                01 23 45 67 89
              </a>
            </div>
          </div>

          <!-- Email -->
          <div class="flex items-center mb-6 group">
            <div class="w-12 h-12 bg-gradient-to-br from-accent-500 to-secondary-500 rounded-full flex items-center justify-center mr-4 group-hover:scale-110 transition-transform">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div>
              <p class="font-semibold text-primary-700">Email</p>
              <a href="mailto:contact@clohypno.fr" class="text-text-light hover:text-primary-600 transition-colors">
                contact@clohypno.fr
              </a>
            </div>
          </div>

          <!-- Localisation -->
          <div class="flex items-center mb-6 group">
            <div class="w-12 h-12 bg-gradient-to-br from-secondary-500 to-primary-500 rounded-full flex items-center justify-center mr-4 group-hover:scale-110 transition-transform">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <div>
              <p class="font-semibold text-primary-700">Localisation</p>
              <a href="#carte" class="text-text-light hover:text-primary-600 transition-colors cursor-pointer font-medium">
                Douarnenez, Finistère
              </a>
            </div>
          </div>

          <!-- Horaires -->
          <div class="bg-primary-50 p-6 rounded-xl border-l-4 border-primary-500">
            <h4 class="font-lora font-bold text-primary-700 mb-3">Horaires de consultation</h4>
            <div class="space-y-1 text-text-light">
              <div class="flex justify-between">
                <span>Lundi - Jeudi</span>
                <span>17h00 - 19h00</span>
              </div>
              <div class="flex justify-between">
                <span>Samedi</span>
                <span>9h00 - 12h00</span>
              </div>
              <div class="flex justify-between">
                <span>Dimanche</span>
                <span>Fermé</span>
              </div>
            </div>
          </div>

          <!-- Tarif -->
          <div class="mt-6 text-center p-4 bg-gradient-to-r from-primary-100 to-accent-100 rounded-xl">
            <p class="text-primary-700 font-semibold">
              Première consultation : <span class="text-xl font-bold">80€</span>
            </p>
            <p class="text-text-light text-sm mt-1">
              Séances de suivi : 70€ (durée : 1h à 1h30)
            </p>
          </div>
        </div>
      </div>

      <!-- Formulaire de contact -->
      <div data-aos="fade-left" data-aos-delay="200">
        <div class="bg-white rounded-2xl p-8 shadow-lg">
          <h3 class="text-2xl font-lora font-bold text-primary-700 mb-6">
            Demande de renseignements
          </h3>

          <form id="contact-form" class="space-y-6" method="POST" netlify>
            <div>
              <label for="name" class="block text-primary-700 font-semibold mb-2">
                Nom complet *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors"
                placeholder="Votre nom et prénom"
              />
            </div>

            <div>
              <label for="email" class="block text-primary-700 font-semibold mb-2">
                Email *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors"
                placeholder="votre@email.com"
              />
            </div>

            <div>
              <label for="phone" class="block text-primary-700 font-semibold mb-2">
                Téléphone
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors"
                placeholder="01 23 45 67 89"
              />
            </div>

            <div>
              <label for="subject" class="block text-primary-700 font-semibold mb-2">
                Motif de consultation
              </label>
              <select
                id="subject"
                name="subject"
                class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors"
              >
                <option value="">Choisir un motif</option>
                <option value="tabac">Arrêt du tabac</option>
                <option value="anxiete">Anxiété & Stress</option>
                <option value="deuil">Accompagnement du deuil</option>
                <option value="trauma">Stress post-traumatique</option>
                <option value="autre">Autre</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-primary-700 font-semibold mb-2">
                Message *
              </label>
              <textarea
                id="message"
                name="message"
                rows="4"
                required
                class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors resize-none"
                placeholder="Décrivez brièvement votre situation et vos attentes..."
              ></textarea>
            </div>

            <div class="text-center">
              <button
                type="submit"
                class="w-full bg-primary-500 text-white px-8 py-4 rounded-full hover:bg-primary-600 transition-all duration-300 font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-1"
              >
                Envoyer ma demande
              </button>
            </div>

            <p class="text-xs text-text-light text-center">
              * Champs obligatoires. Vos données sont traitées de manière confidentielle.
            </p>
          </form>
        </div>
      </div>

    </div>

    <!-- Carte Google Maps -->
    <div id="carte" class="mt-16" data-aos="fade-up">
      <div class="bg-white rounded-2xl p-8 shadow-lg">
        <h3 class="text-2xl font-lora font-bold text-primary-700 mb-6 text-center">
          Localisation
        </h3>
        <div class="w-full h-96 rounded-xl overflow-hidden">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d588.1075627818263!2d-4.336096147690553!3d48.09036110143525!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4816d0c658586187%3A0xdb161bda0c0270f6!2s65%20Rue%20ar%20V%C3%A9ret%2C%2029100%20Douarnenez!5e0!3m2!1sfr!2sfr!4v1752846697871!5m2!1sfr!2sfr"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Localisation de Clotilde à Douarnenez">
          </iframe>
        </div>
        <div class="mt-4 text-center">
          <p class="text-text-light">
            <strong>Douarnenez, Finistère</strong><br>
            Consultations sur rendez-vous uniquement
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Gestion du formulaire
  const form = document.getElementById('contact-form');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const submitButton = form.querySelector('button[type="submit"]');
    const originalText = submitButton.textContent;

    // Changer le texte du bouton pendant l'envoi
    submitButton.textContent = 'Envoi en cours...';
    submitButton.disabled = true;

    try {
      // Ici vous pouvez ajouter la logique d'envoi
      // Pour l'instant, on simule un envoi réussi
      await new Promise(resolve => setTimeout(resolve, 1000));

      // Succès
      submitButton.textContent = 'Message envoyé !';
      submitButton.classList.add('bg-green-500');

      // Réinitialiser le formulaire
      form.reset();

      // Afficher un message de succès
      const successMessage = document.createElement('div');
      successMessage.className = 'bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg mt-4';
      successMessage.textContent = 'Votre message a été envoyé avec succès. Je vous répondrai dans les plus brefs délais.';
      form.appendChild(successMessage);

      // Nettoyer après 5 secondes
      setTimeout(() => {
        successMessage.remove();
        submitButton.textContent = originalText;
        submitButton.disabled = false;
        submitButton.classList.remove('bg-green-500');
      }, 5000);

    } catch (error) {
      // Erreur
      submitButton.textContent = 'Erreur lors de l\'envoi';
      submitButton.classList.add('bg-red-500');

      setTimeout(() => {
        submitButton.textContent = originalText;
        submitButton.disabled = false;
        submitButton.classList.remove('bg-red-500');
      }, 3000);
    }
  });
</script>
